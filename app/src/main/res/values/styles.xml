<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorStyleWhite</item>
        <item name="colorPrimaryDark">@color/colorStyleDarkGrey</item>
        <item name="colorAccent">@color/colorStyleGreen</item>
    </style>
    <style name="AppTheme.popupwindow">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.GreenAccent">
        <item name="colorPrimary">@color/colorStyleDarkGreen</item>
        <item name="colorPrimaryDark">@color/colorStyleDarkGreen</item>
        <item name="colorAccent">@color/colorStyleDarkGreen</item>
    </style>

</resources>
